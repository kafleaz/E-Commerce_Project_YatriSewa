@using System.Collections
@model IEnumerable<YatriSewa_MVC.Models.Seat>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="~/img/logo.png">
    <title>Bus Ticket Booking</title>
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icofont Icon-->
    <link href="~/vendor/icons/icofont.min.css" rel="stylesheet" type="text/css">
    <!-- Slick Slider -->
    <link rel="stylesheet" type="text/css" href="~/vendor/slick/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/slick/slick-theme.min.css" />
    <!-- Custom styles for this template -->
    <link href="~/css/custom.css" rel="stylesheet">
    <!-- Sidebar CSS -->
    <link href="~/vendor/sidebar/demo.css" rel="stylesheet">
</head>
<body class="">
    <div class="longcontainer">
        <!-- Bus Seat Select -->
        <div class="seat-select padding-bt">
            <div class="osahan-header-nav shadow-sm p-3 d-flex align-items-center bg-darkblue">
                <h5 class="font-weight-normal mb-0 text-white">
                    <a class="text-green mr-3" href="@Url.Action("BusListing", "Yatri", new { from = ViewBag.From, to = ViewBag.To, date = ViewBag.Date, userLoginId = ViewBag.UserLoginId })"><i class="icofont-rounded-left"></i></a>
                    Bus Seat Select
                </h5>
                <div class="ml-auto d-flex align-items-center">
                    <a class="toggle osahan-toggle h4 m-0 text-white ml-auto" href="#"><i class="icofont-navigation-menu"></i></a>
                </div>
            </div>

            <!-- Ticket -->
            <div class="ticket p-3">
                <h6 class="mb-1 font-weight-bold text-dark">@ViewBag.BusName</h6>
                <div class="start-rating f-10 mb-3">
                    <i class="icofont-star text-green"></i>
                    <i class="icofont-star text-green"></i>
                    <i class="icofont-star text-green"></i>
                    <i class="icofont-star text-green"></i>
                    <i class="icofont-star text-muted"></i>
                    <span class="text-dark">4.0</span>
                </div>
                <div class="bg-white rounded-1 shadow-sm p-3 mb-3 w-100">
                  
                        <div class="row mx-0 mb-3">
                        @if (ViewBag.Services.Wifi)
                             {
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">Wifi</small>
                                <p class="small mb-0 l-hght-14">Available</p>
                            </div>
                             }
                              @if (ViewBag.Services.AC)
                             {
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">AC</small>
                                <p class="small mb-0 l-hght-14">Available</p>
                            </div>
                             }
                        </div>
                    
                        <div class="row mx-0 mb-3">
                            @if (ViewBag.Services.Meals)
                             {
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">Dinner / Lunch</small>
                                <p class="small mb-0 l-hght-14">Available</p>
                            </div>
                             }
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">Safety Features</small>
                                <p class="small mb-0 l-hght-14">@ViewBag.Services.SafetyFeatures</p>
                            </div>
                        </div>
                        <div class="row mx-0">
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">Essentials</small>
                                <p class="small mb-0 l-hght-14">@ViewBag.Services.Essentials</p>
                            </div>
                            <div class="col-6 p-0">
                                <small class="text-muted mb-1 f-10 pr-1">Snacks</small>
                                <p class="small mb-0 l-hght-14">@ViewBag.Services.Snacks</p>
                            </div>
                        </div>
                    
                </div>
            </div>

            <!-- Select Seat Section -->
            <div class="ticket p-3">
            <div class="select-seat bg-white mx-0 px-3 pt-3 pb-1 mb-3 rounded-1 shadow-sm">
                <div class="col-8 pl-0">
                    <div class="d-flex">
                        <div class="sold text-center">
                            <img src="~/img/sold-seat.png" class="img-fluid mb-1">
                            <p class="small f-10">Sold Out</p>
                        </div>
                        <div class="sold text-center mx-3">
                            <img src="~/img/available-seat.png" class="img-fluid mb-1">
                            <p class="small f-10">Available</p>
                        </div>
                        <div class="sold text-center">
                            <img src="~/img/selected-seat.png" class="img-fluid mb-1">
                            <p class="small f-10">Selected</p>
                        </div>
                            <div class="col-4 text-right pr-0">
                            <img src="~/img/driver.png" class="img-fluid mb-4">
                        </div>
                    </div>
                    <!-- Display seats in 4 columns -->
                    <form id="seatForm" asp-action="BookSeat" method="post">
                        <input type="hidden" name="busId" value="@ViewBag.BusId" />
                        <input type="hidden" name="userLoginId" value="@ViewBag.UserLoginId" />
                        <input type="hidden" name="from" value="@ViewBag.From" />
                        <input type="hidden" name="to" value="@ViewBag.To" />
                        <input type="hidden" name="date" value="@ViewBag.Date" />
                        <div class="select-seat">
                            <div class="checkboxes-seat mt-4">
                                @{
                                    int seatCapacity = ViewBag.SeatCapacity;
                                    int columnCount = 4;
                                    for (int i = 1; i <= seatCapacity; i++)
                                    {
                                        if (i % columnCount == 1)
                                        {
                                            @:<div class="row">
                                        }

                                        var seatNumber = i.ToString();
                                        var seat = Model.FirstOrDefault(s => s.SeatNumber == seatNumber);
                                        var isSold = seat != null && seat.IsSold;
                                        var seatClass = isSold ? "btn-green" : "btn-success";
                                        var isDisabled = isSold ? "checked disabled" : "";
                                        <div class="col-3">
                                            <div class="btn-group btn-group-toggle d-block mb-1" data-toggle="buttons">
                                                <label class="btn check-seat @seatClass small btn-sm rounded mr-2 mb-2">
                                                    <input type="checkbox" name="seats" value="@seatNumber" autocomplete="off" @isDisabled>
                                                    @seatNumber
                                                </label>
                                            </div>
                                        </div>

                                        if (i % columnCount == 0 || i == seatCapacity)
                                        {
                                            @:</div>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            </div>
                <div class="fixed-bottom nav-osahan-fotter view-seatbt p-3">
                <button type="submit" form="seatForm" class="btn btn-darkblue btn-block d-flex align-items-center osahanbus-btn rounded-1">
                    <span class="text-left l-hght-14">
                        TOTAL @($"${ViewBag.Price * ViewBag.SelectedSeatsCount}")<br>
                        <small class="f-10 text-white-50">Seats Selected: @ViewBag.SelectedSeatsCount</small>
                    </span>
                    <span class="font-weight-bold ml-auto">NEXT</span>
                </button>
            </div>

            @* <!-- Passenger Information -->
            <div class="list_item d-flex col-12 m-0 p-3 bg-white shadow-sm rounded-1 shadow-sm">
                <div class="d-flex mb-auto">
                    <img src="~/img/qr-code.png" class="img-fluid osahan-qr">
                </div>
                <div class="d-flex w-100">
                    <div class="bus_details w-100 pl-3">
                        <p class="mb-2 l-hght-18 font-weight-bold">More info.</p>
                        <div class="l-hght-10 d-flex align-items-center my-2">
                            <small class="text-muted mb-0 pr-1">Passenger</small>
                            <input type="text" name="passengerName" class="form-control" value="@($"{ViewBag.User.FirstName} {ViewBag.User.LastName}")" />
                        </div>
                        <div class="l-hght-10 d-flex align-items-center my-2">
                            <small class="text-muted mb-0 pr-1">Ticket Number</small>
                            <input type="text" name="ticketNumber" class="form-control" value="@ViewBag.Passenger?.TicketNumber" />
                        </div>
                        <div class="l-hght-10 d-flex align-items-center my-2">
                            <small class="text-muted mb-0 pr-1">PNR Number</small>
                            <input type="text" name="pnrNumber" class="form-control" value="@ViewBag.Passenger?.PNRNumber" />
                        </div>
                        <div class="l-hght-10 d-flex align-items-center mt-3">
                            <p class="mb-0 pr-1 font-weight-bold">Amount Paid</p>
                            <p class="mb-0 ml-auto l-hght-14 text-green font-weight-bold">@($"${ViewBag.Price * ViewBag.SelectedSeatsCount}")</p>
                        </div>
                    </div>
                </div>
            </div> *@

            <!-- Continue Booking -->
            
        </div>
    </div>
        <!-- Bootstrap core JavaScript -->
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- slick Slider JS-->
        <script type="text/javascript" src="~/vendor/slick/slick.min.js"></script>
        <!-- Sidebar JS-->
        <script type="text/javascript" src="~/vendor/sidebar/hc-offcanvas-nav.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/js/custom.js"></script>
    </div>
</body>
</html>